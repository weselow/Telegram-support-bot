# Telegram Bot
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
SUPPORT_GROUP_ID=-1001234567890

# Database (port 5433 to avoid conflicts with existing PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/support_bot
DATABASE_URL_TEST=postgresql://postgres:postgres@localhost:5433/support_bot_test

# Redis (port 6380 to avoid conflicts with existing Redis)
REDIS_URL=redis://localhost:6380

# HTTP Server (website integration)
HTTP_PORT=3000
SUPPORT_DOMAIN=support.example.com

# DaData API (for GeoIP, optional)
DADATA_API_KEY=

# Sentry (optional)
SENTRY_DSN=

# Environment
NODE_ENV=development
LOG_LEVEL=info
