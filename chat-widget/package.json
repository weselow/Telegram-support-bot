{
  "name": "@dellshop/chat-widget",
  "version": "0.1.0",
  "description": "Embeddable live chat widget for DellShop support",
  "main": "dist/chat-widget.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "node esbuild.config.js --watch",
    "dev:serve": "node esbuild.config.js --serve",
    "build": "node esbuild.config.js && npm run copy",
    "build:prod": "cross-env NODE_ENV=production node esbuild.config.js",
    "copy": "node -e \"const fs=require('fs');const path=require('path');const p='../public/chat-widget/';['chat-widget.js','base.css','modal.css','drawer.css'].forEach(f=>fs.copyFileSync('dist/'+f,p+f));const td='dist/themes';const pt=p+'themes/';if(fs.existsSync(td)){fs.mkdirSync(pt,{recursive:true});fs.readdirSync(td).filter(f=>f.endsWith('.css')).forEach(f=>fs.copyFileSync(path.join(td,f),path.join(pt,f)))}\"",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.24.0",
    "jsdom": "^27.4.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.7.0",
    "vitest": "^4.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "chat",
    "widget",
    "support",
    "websocket",
    "dellshop"
  ],
  "author": "DellShop",
  "license": "UNLICENSED",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
